@model WebApp.Models.ViewModels.EditProjectFormModel

@* Basecode for modal from Material Tailwind, modified to fit the design of the project. *@
<div data-dialog-backdrop="edit-project-dialog"
     data-dialog-backdrop-close="true"
     class="pointer-events-none fixed inset-0 z-[999] grid h-screen w-screen place-items-center bg-black bg-opacity-60 opacity-0 backdrop-blur-sm transition-opacity duration-300">
    <div data-dialog="edit-project-dialog"
         class="relative mx-auto w-full max-w-[24rem] sm:max-w-[32rem] rounded-lg overflow-hidden shadow-sm">
        <form asp-action="Edit" asp-controller="Project" novalidate class="relative flex flex-col bg-white max-h-[90dvh] overflow-y-auto">

            <div class="m-8 items-center flex justify-start">
                <h3 class="text-2xl font-bold text-slate-950">
                    Edit Project
                </h3>
            </div>

            <div class="w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px] flex items-center justify-center">
                <div class="img-bg-square h-32 w-32">
                    <img src="~/images/Vector6.svg" asp-append-version="true" alt="project symbol" class="inline-block w-20 h-20 pt-2" />
                </div>
            </div>

            <div class="flex flex-col gap-4 p-6">
                <input type="hidden" asp-for="ProjectId" data-target="edit-project-id" />
                <div class="w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px]">
                    <label asp-for="ProjectName" class="block mb-2 text-sm text-slate-950">
                        Project Name
                    </label>
                    <input asp-for="ProjectName" data-target="edit-project-name" class="text-input" placeholder="Project Name" />
                </div>

                <div class="w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px]">
                    <label asp-for="ClientName" class="block mb-2 text-sm text-slate-950">
                        Client Name
                    </label>
                    <input asp-for="ClientName" data-target="edit-client-name" class="text-input" placeholder="Client Name" />
                </div>

                <div class="w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px]">
                    <label asp-for="Description" class="block mb-2 text-sm text-slate-950">
                        Description
                    </label>
                    <input asp-for="Description" type="hidden"/>
                    <div class="rich-text-editor min-h-[10rem] text-input"
                         data-target="edit-description"
                         data-initial-content="@Html.Raw(Model.Description)">
                    </div>
                </div>

                <div class="flex gap-4 w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px]">
                    <div class="w-full max-w-sm min-w-[100px] sm:max-w-md sm:min-w-[150px]">
                        <label asp-for="StartDate" class="block mb-2 text-sm font-semibold text-slate-950">
                            Start Date
                        </label>
                        <input asp-for="StartDate" data-target="edit-start-date" type="date" class="text-input" />
                    </div>
                    <div class="w-full max-w-sm min-w-[100px] sm:max-w-md sm:min-w-[150px]">
                        <label asp-for="EndDate" class="block mb-2 text-sm font-semibold text-slate-950">
                            End Date
                        </label>
                        <input asp-for="EndDate" data-target="edit-end-date" type="date" class="text-input" />
                    </div>
                </div>

                <div class="w-full max-w-sm min-w-[200px] sm:max-w-md sm:min-w-[300px]">
                    <label asp-for="Budget" class="block mb-2 text-sm text-slate-950">
                        Budget
                    </label>
                    <input asp-for="Budget" data-target="edit-budget" type="number" class="text-input" placeholder="Budget" />
                </div>
            </div>
            <div class="p-6 pt-8">
                <button class="btn-primary" type="submit">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>