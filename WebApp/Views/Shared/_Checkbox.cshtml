@model (string Id, string Label, bool IsRequired)

<div class="inline-flex items-center mt-2">
    <label class="flex items-center cursor-pointer relative" for="@Model.Id">
        <input 
            type="checkbox" 
            id="@Model.Id" 
            class="peer checkbox" 
            @(Model.IsRequired ? "required" : "")
        />
        <span class="absolute checkmark">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" stroke="currentColor" stroke-width="1">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
        </span>
    </label>
    <label for="@Model.Id" class="cursor-pointer ml-2 text-sm">
        @Model.Label
        @if (Model.IsRequired)
        {
            <span class="text-red-500">*</span>
        }
    </label>
</div>


