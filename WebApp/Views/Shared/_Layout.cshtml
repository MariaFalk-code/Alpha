<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    @* Material Tailwind Stable Version CSS (v2.3.2) *@
    <link rel="stylesheet" href="https://unpkg.com/@@material-tailwind/html@2.3.2/styles/material-tailwind.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    @* Material Tailwind Stable Version JS (v2.3.2) *@
    <script src="https://unpkg.com/@@material-tailwind/html@2.3.2/scripts/popover.js" type="module" defer></script>
    @* Quill script (not a module) *@
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js" defer></script>
    <title>@ViewData["Title"] Alpha - Project Management System</title>
  
</head>
<body class="min-h-screen bg-slate-200 dark:bg-slate-900">
    <div class="grid grid-cols-[minmax(160px,_270px)_1fr] min-h-screen">
        <aside class="p-4 border-r border-slate-300 dark:border-slate-700">
            @await Html.PartialAsync("_LogoPartial")
            @await Html.PartialAsync("_NavAside")
        </aside>
        <div class="grid grid-rows-[auto_1fr] h-screen">
			@await Html.PartialAsync("_Header")
            <main role="main" class="grid grid-rows-[auto_auto_1fr] p-8">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
